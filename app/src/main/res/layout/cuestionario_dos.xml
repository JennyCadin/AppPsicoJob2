<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activity.Cuestionariodos">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="398dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/banneruno"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textTituloPeli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Evalúa el contentido de esta APP"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/idRadiouno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="Insuficiente" />

        <RadioButton
            android:id="@+id/idRadiodos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="Buena" />

        <RadioButton
            android:id="@+id/idRadiotres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="Muy buena" />


    </RadioGroup>


    <Button
        android:id="@+id/texopcionesdos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onclick"
        android:text="Valida tu/s opción/es"
        android:textAlignment="center" />

    <RatingBar
        android:id="@+id/ratingdos"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:numStars="5"
        android:rating="0"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/evalua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Volverías a consultar esta app?"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/buttonAnte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="149dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="19dp"
        android:text="Anterior"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button5"
        android:layout_width="111dp"
        android:layout_height="36dp"
        android:layout_marginStart="149dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="19dp"
        android:text="Check App"
        app:layout_constraintBottom_toTopOf="@+id/buttonAnte"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"


        />


</LinearLayout>